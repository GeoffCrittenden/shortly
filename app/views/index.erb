<div class="container">
  <h1>Shortly!</h1>
  <form action="/shorten" method="POST">
    <label>URL: <input type="text" required name="url" placeholder="enter your url here" size="40"></label>
    <input type="submit" value="Shorten it!">
  </form><br>

  <% if @shortly %>
    <p>Your Shortly: 
    <a href="/<%= @shortly.shortly %>" target="_blank">shur.ly/<%= @shortly.shortly %></a></p>
    <p>Original URL: <a href="<%= @shortly.lead %><%= @shortly.body %>" target="_blank"><%= @shortly.url %></a></p>
  <% elsif @error %>
    <p><%= @error %></p>
  <% end %>

</div>